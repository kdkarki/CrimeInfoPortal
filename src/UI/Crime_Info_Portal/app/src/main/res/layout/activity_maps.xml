<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context=".MainActivity"
    android:weightSum="1">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="fill_parent"
        android:id="@+id/main_screen">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:id="@+id/topBar_main">

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="Welcome to Crime Info Portal"
                android:id="@+id/Welcome_main"
                android:textColor="#ffa500"
                android:textSize="20dp" />

        </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:id="@+id/operation_screen">

            <TableLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:id="@+id/Button_layout"
                android:stretchColumns="*">

                <TableRow
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:id="@+id/Button_Bar"
                    android:baselineAligned="false"
                    android:measureWithLargestChild="false">

                    <Button
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Report"
                        android:id="@+id/list"
                        android:onClick="report_method" />

                    <Button
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Map"
                        android:id="@+id/map_button" />

                    <Button
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Tweets"
                        android:id="@+id/twits"
                        android:onClick="tweets_method"
                        android:nestedScrollingEnabled="false" />
                </TableRow>

            </TableLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:id="@+id/view_screen"
                android:orientation="vertical"
                android:background="@color/background_material_light">

                <fragment
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" android:id="@+id/map"
                    tools:context="com.example.nyy.crime_info_portal.MapsActivity"
                    android:name="com.google.android.gms.maps.SupportMapFragment" />
            </LinearLayout>
        </LinearLayout>

    </LinearLayout>
</RelativeLayout>
